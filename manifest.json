{
  "manifest_version": 3,
  "name": "HypeLessLi",
  "version": "3.1",
  "description": "Highlights hype, subjective, vague, and exaggerated language in scientific or professional writing.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_title": "HypeLessLi - Toggle highlighting",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["terms.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}